<body class="bg">
  <div class="container-fluid left">
    <div class="row justify-content-center mt-5">
      <div class="col-md-6">
        <div class="login">

          <div class="card">
            <div class="card-body">
              <h2 class="card-title text-center heading">Admin Log in</h2>
              <hr>

              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
                <div class="mb-3 ">
                  <%= f.label :email, class: "form-label flex" %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
                </div>

                <div class="mb-3">
                  <%= f.label :password, class: "form-label flex" %>
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
                </div>

                <div class="mb-3">
                  <%= f.submit "Log in", class: "btn btn-primary bg-dark btn-lg w-100 mt-2" %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
