<body class="body">
<div class="container left">
<div class="row">
  <div class="col-3">
<section class="section">
<h1 class="heading"><%= @hotel.name %></h1>
<div class="row">
  <% if @hotel.base_image.present? %> <%= image_tag @hotel.base_image, class: "img-fluid base-img" %> <%end%>
</div>
</section>
<p>
  <strong>City:</strong>
  <%= @hotel.city %>
</p>

<p>
  <strong>Country:</strong>
  <%= @hotel.country %>
</p>

<p>
  <strong>State:</strong>
  <%= @hotel.state %>
</p>

<p>
  <strong>Address:</strong>
  <%= @hotel.address %>
</p>

<p>
  <strong>Location Latitude:</strong>
  <%= @hotel.loc_lat %>
</p>

<p>
  <strong>Location Longitude:</strong>
  <%= @hotel.loc_long %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @hotel.rating %>
</p>

<p>
  <strong>Price:</strong>
  <%= @hotel.price %>
</p>

<p>
  <strong>Discounted Price:</strong>
  <%= @hotel.discounted_price %>
</p>

<p>
  <strong>Bed:</strong>
  <%= @hotel.bed %>
</p>

<p>
  <strong>Living Room:</strong>
  <%= @hotel.living_room %>
</p>

<p>
  <strong>Bathroom:</strong>
  <%= @hotel.bathroom %>
</p>

<p>
  <strong>Kitchen:</strong>
  <%= @hotel.kitchen %>
</p>

<p>
  <strong>Reserved Room:</strong>
  <%= @hotel.reserved_room %>
</p>

<p>
  <strong>description:</strong>
  <%= @hotel.description %>
</p>


 
  </div>
  <div class="col-9">
    <div class="base">
      <h2>Images</h2>
      <div>
 <%= link_to 'Edit', edit_hotel_path(@hotel), class: 'btn btn-primary' %>
<%= link_to 'Back', hotels_path, class: 'btn btn-secondary' %>
<%= link_to 'Destroy', @hotel, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </div>
     
    </div>
    
<div class="row scroll">
 <% @hotel.images.each do |image| %>
    <div class="col-md-3 mb-3 ">
      <%= image_tag image, class: "img-fluid" %>
    </div>
  <% end %>
  </div>
 
</div>
  
</div>

</body>


</div>

