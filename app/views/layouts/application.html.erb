<!DOCTYPE html>
<html>
  <head>
    <title>HotelManagement</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
<%= javascript_include_tag  "turbo" ,type: "module" %>
    <%= javascript_importmap_tags %>
    
    

  </head>

  <body>
<!-- app/views/layouts/_navbar.html.erb -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <%= link_to "Althaqlain", root_path, class: "navbar-brand" %>
    
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if admin_signed_in? %>
        <!-- Display when admin is logged in -->
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
           
          <li class="nav-item">
            <%= link_to "Hotels", hotels_path, class: "nav-link" %>
          </li>
          <!-- Add more admin-specific links as needed -->
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <span class="navbar-text">Logged in as: <%= current_admin.email %></span>
          </li>
          <li class="nav-item">
            <%= link_to "Log out", destroy_admin_session_path, data: { turbo_method: :delete }, class: "nav-link"%>

          </li>
        </ul>
      <% else %>
        <!-- Display when admin is not logged in -->
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to "Login", new_admin_session_path, class: "nav-link" %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</nav>

    <div class="container mt-4">
      <%= yield %>
    </div>
  </body>
</html>
